<Defs>
  <ThingDef ParentName="StandingLampBase">
    <defName>SMSLC_StandingLamp_Yellow</defName>
    <label>standing lamp (yellow)</label>
    <description>A standing lamp that lights an area in yellow.</description>
    <designatorDropdown>StandingLampColored</designatorDropdown>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(217,217,80,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>ColoredLights</li>
    </researchPrerequisites>
  </ThingDef>
